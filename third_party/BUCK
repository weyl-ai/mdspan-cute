# Third party dependencies
#
# Headers and libraries come from Nix devshell (NIX_CFLAGS_COMPILE, NIX_LDFLAGS).
# These cxx_library rules just provide the linker flags.

# Catch2 v3 testing framework
cxx_library(
    name = "catch2",
    exported_linker_flags = [
        "-lCatch2Main",
        "-lCatch2",
    ],
    visibility = ["PUBLIC"],
)

# RapidCheck property-based testing
cxx_library(
    name = "rapidcheck",
    exported_linker_flags = [
        "-lrapidcheck",
    ],
    visibility = ["PUBLIC"],
)

# CUTLASS/cute headers (header-only)
cxx_library(
    name = "cutlass",
    visibility = ["PUBLIC"],
)

# mdspan reference implementation (header-only)
cxx_library(
    name = "mdspan",
    visibility = ["PUBLIC"],
)

# CUDA SDK (cudart, cccl) - header-only for now
cxx_library(
    name = "cuda",
    visibility = ["PUBLIC"],
)
