# Third party dependencies from Nix (via toolchains flake.package)

# Catch2 v3
cxx_library(
    name = "catch2",
    exported_headers = {},
    exported_preprocessor_flags = [],
    exported_linker_flags = [
        "-lCatch2Main",
        "-lCatch2",
    ],
    deps = ["toolchains//:catch2-pkg"],
    visibility = ["PUBLIC"],
)

